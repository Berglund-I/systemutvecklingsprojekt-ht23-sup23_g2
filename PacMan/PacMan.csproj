<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="MainViewModels\**" />
    <Compile Remove="Views\Images2\**" />
    <Compile Remove="Views\Images\**" />
    <EmbeddedResource Remove="MainViewModels\**" />
    <EmbeddedResource Remove="Views\Images2\**" />
    <EmbeddedResource Remove="Views\Images\**" />
    <None Remove="MainViewModels\**" />
    <None Remove="Views\Images2\**" />
    <None Remove="Views\Images\**" />
    <Page Remove="MainViewModels\**" />
    <Page Remove="Views\Images2\**" />
    <Page Remove="Views\Images\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Views\Heart.png" />
    <None Remove="Views\PacManFirst.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Fody" Version="6.8.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="PropertyChanged.Fody" Version="4.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Views\Heart.png" />
    <Resource Include="Views\PacManFirst.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>

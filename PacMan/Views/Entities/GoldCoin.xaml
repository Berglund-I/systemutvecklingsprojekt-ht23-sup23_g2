<local:Coin x:Class="PacMan.Views.Entities.GoldCoin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PacMan.Views.Entities"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- Bind the Score property to a TextBlock that displays the score -->
    <Grid DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:Coin}}}">
        <Ellipse Width="10" Height="10" Fill="Gold" Stroke="Black" StrokeThickness="0.5"/>
        <TextBlock Text="{Binding Score}" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" Margin="20,24,0,0" Width="31"/>
    </Grid>

</local:Coin>

<Window x:Class="PacMan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PacMan"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ContentControl x:Name="MainContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DataContext="{Binding GameViewModel}" />

        <Button Content="Start Game"  
                HorizontalAlignment="Left" Margin="361,289,0,0" VerticalAlignment="Top" 
                Command="{Binding StartGameCommand}" CommandParameter="{Binding ElementName=NameTextBox, Path=Text}">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <TextBlock FontSize="50" HorizontalAlignment="Center" Margin="0,70,0,0" TextWrapping="Wrap" Text="PacMan" VerticalAlignment="Top" Height="73" Width="222"/>
        <TextBlock HorizontalAlignment="Left" Margin="361,165,0,0" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top" Height="19" Width="39"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="405,166,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="86"/>
    </Grid>
</Window>